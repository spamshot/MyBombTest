<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment"
    android:background="@color/teal_200"
    android:id="@+id/bombSettingsLayout"
    android:orientation="vertical">


    <TextView
        android:id="@+id/extInFo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        android:text="@string/txt_fake"
        android:textSize="102sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtArmTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="266dp"
        android:text="@string/txt_arming"
        android:textSize="62sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/extInFo"
        app:layout_constraintTop_toBottomOf="@+id/extInFo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="@string/txt_min"
        android:textStyle="bold"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/editMinusTime"
        app:layout_constraintStart_toEndOf="@+id/editMinusTime"
        app:layout_constraintTop_toTopOf="@+id/editMinusTime"
        app:layout_constraintVertical_bias="0.645" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/txt_wrong"
        android:textSize="62sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/txt_bomb_timer"
        android:textSize="62sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/txtArmTime"
        app:layout_constraintTop_toBottomOf="@+id/txtArmTime" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="@string/txt_min"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/editTime"
        app:layout_constraintStart_toEndOf="@+id/editTime"
        app:layout_constraintTop_toTopOf="@+id/editTime"
        app:layout_constraintVertical_bias="0.58" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="@string/txt_seconds"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/editArmTime"
        app:layout_constraintStart_toEndOf="@+id/editArmTime"
        app:layout_constraintTop_toTopOf="@+id/editArmTime"
        app:layout_constraintVertical_bias="0.612" />

    <EditText
        android:id="@+id/editMinusTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:autofillHints="@string/txt_hint_20"
        android:hint="@string/txt_hint_20"
        android:inputType="number"
        android:maxLength="2"
        android:textSize="62sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.826" />

    <EditText
        android:id="@+id/editTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:autofillHints="@string/txt_hint_300"
        android:hint="@string/txt_hint_300"
        android:inputType="number"
        android:maxLength="3"
        android:textSize="62sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.047" />

    <EditText
        android:id="@+id/editArmTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:autofillHints="@string/txt_hint_20"
        android:hint="@string/txt_hint_20"
        android:inputType="number"
        android:maxLength="3"
        android:textSize="62sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtArmTime"
        app:layout_constraintStart_toEndOf="@+id/txtArmTime"
        app:layout_constraintTop_toTopOf="@+id/txtArmTime"
        app:layout_constraintVertical_bias="0.38" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="42dp"
        android:text="@string/txt_start"
        android:textSize="46sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>